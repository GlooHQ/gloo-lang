{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/baml_wasm_web/*": ["../baml-schema-wasm-web/dist/*"],
      "@/shared/*": ["../playground-common/src/shared/*"],
      "~/baml_wasm_web/*": ["../playground-common/src/baml_wasm_web/*"],
      "@/*": ["./*"],
      "~/lib/utils/*": ["../playground-common/src/lib/utils/*"],

      "~/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
